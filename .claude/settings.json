{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_FILE_PATH\" | grep -q 'db/schema.sql$'; then echo 'WARNING: db/schema.sql is GENERATED by dbmate - never edit manually! Read docs/DEPLOYMENT.md for the correct workflow: create migrations with dbmate new, then run dbmate up and dbmate dump to regenerate schema.sql'; exit 2; fi"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun run lint 2>&1 | head -50 || true"
          },
          {
            "type": "command",
            "command": "bun run typecheck 2>&1 | head -30 || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bunx eslint --fix \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "bun run typecheck 2>&1 | head -20"
          }
        ]
      }
    ]
  }
}
