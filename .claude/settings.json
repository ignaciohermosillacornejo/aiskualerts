{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun run lint 2>&1 | head -50 || true"
          },
          {
            "type": "command",
            "command": "bun run typecheck 2>&1 | head -30 || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bunx eslint --fix \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "bun run typecheck 2>&1 | head -20"
          }
        ]
      }
    ]
  }
}
